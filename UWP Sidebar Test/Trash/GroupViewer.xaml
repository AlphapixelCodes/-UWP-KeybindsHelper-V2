<Page
    x:Class="UWP_Sidebar_Test.GroupViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Sidebar_Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent" Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="CD1"/>
                    <ColumnDefinition x:Name="CD2"/>
                    <ColumnDefinition x:Name="CD3"/>
                    <ColumnDefinition x:Name="CD4"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="S1" BorderBrush="Red" BorderThickness="1"/>
                <StackPanel x:Name="S2" Grid.Column="1" BorderBrush="Red" BorderThickness="1"/>
                <StackPanel x:Name="S3" Grid.Column="2" BorderBrush="Red" BorderThickness="1"/>
                <StackPanel x:Name="S4" Grid.Column="3" BorderBrush="Red" BorderThickness="1"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
